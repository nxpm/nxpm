{
  "version": 1,
  "projects": {
    "docs": {
      "projectType": "application",
      "root": "apps/docs",
      "sourceRoot": "apps/docs/src",
      "architect": {
        "serve": {
          "builder": "@nx-plus/docusaurus:docusaurus",
          "options": {
            "port": 4280
          }
        },
        "build": {
          "builder": "@nx-plus/docusaurus:build-docusaurus",
          "options": {
            "outputPath": "dist/docs"
          }
        },
        "publish": {
          "builder": "@nrwl/workspace:run-commands",
          "options": {
            "commands": [
              {
                "command": "yarn nx build docs"
              },
              {
                "command": "cd dist/docs && git init && git add . && git commit -m 'feat: publish site' && git remote add origin git@github.com:nxpm/nxpm.github.io.git && git push --set-upstream origin master --force"
              }
            ],
            "parallel": false
          }
        }
      }
    },
    "schematics": {
      "root": "libs/schematics",
      "sourceRoot": "libs/schematics/src",
      "projectType": "library",
      "schematics": {},
      "architect": {
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "libs/schematics/tsconfig.lib.json",
              "libs/schematics/tsconfig.spec.json"
            ],
            "exclude": ["**/node_modules/**", "!libs/schematics/**"]
          }
        },
        "test": {
          "builder": "@nrwl/jest:jest",
          "options": {
            "jestConfig": "libs/schematics/jest.config.js",
            "tsConfig": "libs/schematics/tsconfig.spec.json",
            "passWithNoTests": true
          }
        },
        "build": {
          "builder": "@nrwl/node:package",
          "options": {
            "outputPath": "dist/libs/schematics",
            "tsConfig": "libs/schematics/tsconfig.lib.json",
            "packageJson": "libs/schematics/package.json",
            "main": "libs/schematics/src/index.ts",
            "assets": [
              "libs/schematics/*.md",
              {
                "glob": "**/*.json",
                "input": "libs/schematics/src/lib",
                "output": "./lib/"
              },
              {
                "glob": "**/*.*__tmpl__",
                "input": "libs/schematics/src/lib",
                "output": "./lib/"
              }
            ]
          }
        }
      }
    }
  },
  "cli": {
    "defaultCollection": "@nrwl/workspace"
  },
  "schematics": {
    "@nrwl/workspace": {
      "library": {
        "linter": "eslint"
      }
    },
    "@nrwl/cypress": {
      "cypress-project": {
        "linter": "eslint"
      }
    },
    "@nrwl/react": {
      "application": {
        "linter": "eslint"
      },
      "library": {
        "linter": "eslint"
      }
    },
    "@nrwl/next": {
      "application": {
        "linter": "eslint"
      }
    },
    "@nrwl/web": {
      "application": {
        "linter": "eslint"
      }
    },
    "@nrwl/node": {
      "application": {
        "linter": "eslint"
      },
      "library": {
        "linter": "eslint"
      }
    },
    "@nrwl/nx-plugin": {
      "plugin": {
        "linter": "eslint"
      }
    },
    "@nrwl/nest": {
      "application": {
        "linter": "eslint"
      }
    },
    "@nrwl/express": {
      "application": {
        "linter": "eslint"
      },
      "library": {
        "linter": "eslint"
      }
    }
  }
}
